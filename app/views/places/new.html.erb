<h1>New Place</h1>

<div class="form-container">
  <%= form_with model: @place do |form| %>
    <p>
      <%= form.label :name, "Name of the Place" %>
      <%= form.text_field :name, placeholder: "e.g. Mexico City" %>
    </p>
    
    <p>
      <%= form.label :image_url, "Image URL" %>
      <%= form.text_field :image_url, placeholder: "https://example.com/image.jpg" %>
    </p>

    <p>
      <%= form.submit "Create Place", class: "btn" %>
    </p>
  <% end %>
</div>

<p style="margin-top: 20px;">
  <%= link_to "Back to Places", places_path %>
</p>
